<% layout('layouts/boilerplate') %>
             <h1 style="font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; color: rgb(80, 93, 122);">All Places</h1>
     
    <% for(let restaurant of restaurants){%>
       <div class="card mb-3" style="background-color: rgb(196, 199, 165);">
              <div class="row">
                     <div class="col-md-4">
                            <img class="img-fluid" src="<%= restaurant.images[0].url %>" alt=""> 
                     </div>
                     <div class="col-md-8">
                              <div class="card-body">
                                       <h5 class="card-title"><%= restaurant.title %></h5>
                                       <p class="card-text"><%= restaurant.description %></p> 
                                       <p class="card-text">
                                           <small class="text-muted"><%= restaurant.location %></small>
                                       </p>
                                      <a href="/restaurants/<%= restaurant._id %>" class="btn btn-outline-success">View</a>
                               </div>
                     </div>
              </div>
       </div>
             
    <% } %>
            
 <style>
        body{
               background-color: rgb(181, 190, 192);
        }
 </style>